.fondo {
  width: 100%;
  height: 100%;
  background-color: #1c355e; /* o puedes poner una imagen */
  position: relative;
}

.titulo {
  font-size: 100px;
  color: white;
  margin-top: 20px;
}

.leccion {
  width: 150px;
  height: 150px;
  background-color: #6fa3ef;
  border-radius: 125px;
  color: white;
  font-size: 65px;
  position: absolute;
  transition: transform 0.2s ease;
}

.leccion:hover {
  width: 170px;
  height: 170px;
  background-color: #5a8cd0;
}
